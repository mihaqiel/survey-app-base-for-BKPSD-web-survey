generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum QuestionType {
  TEXT
  SCORE
}

model Survey {
  id        String     @id @default(cuid())
  title     String
  isActive  Boolean    @default(true)
  expiresAt DateTime?
  ownerId   String?    // ðŸš€ Added to fix admin.ts error
  createdAt DateTime   @default(now()) // ðŸš€ Added to fix admin.ts error
  questions Question[]
  responses Response[]
}

model Question {
  id        String   @id @default(cuid())
  surveyId  String
  survey    Survey   @relation(fields: [surveyId], references: [id], onDelete: Cascade)
  text      String
  type      String   // "SCORE" or "TEXT"
  isKPI     Boolean  @default(false) // ðŸŽ¯ Marks the primary metric
}

model Response {
  id           String   @id @default(cuid())
  surveyId     String
  survey       Survey   @relation(fields: [surveyId], references: [id], onDelete: Cascade)
  answers      Answer[] 
  primaryScore Float?   
  globalScore  Float?   
  fingerprint  String?  
  createdAt    DateTime @default(now())
}

model Answer {
  id         String   @id @default(cuid())
  responseId String
  response   Response @relation(fields: [responseId], references: [id], onDelete: Cascade)
  questionId String
  value      String   // ðŸš€ code must use 'value', not 'content'
}